<Window x:Class="VirtualFAT.EnterFolderName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualFAT"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Icon="Images/fat32-formatter.png"
        Title="Artemiy OS" Height="109.459" Width="290.927">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="Message" Text="Enter folder name" />
            <TextBox x:Name="ResponseTextBox" KeyDown="ResponseTextBox_KeyDown" TextChanged="ResponseTextBox_TextChanged" />
            <Button Content="OK" IsEnabled="False" x:Name="OkButton" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
